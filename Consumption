Description: This program calculates the electricty costs of 10 customers.
*/

#include <iostream>
#include <iomanip>
#include <fstream>
#include <string>
using namespace std;

int main()
{

	int arr[10];
	double cost[10];

	ifstream volt;
	volt.open("consumptions.dat");
	for (int i = 0; i < 10; i++)
	{
		volt >> arr[i];

		if (arr[i] <= 500)
			cost[i] = 0.03 * arr[i] + 8;
		else if (arr[i] <= 1000)
			cost[i] = 12 + 8 + 0.10 * (arr[i] - 500);
		else
			cost[i] = 37 + 8 + 0.11 * (arr[i] - 1000);
	}

	volt.close();

	cout << setprecision(2) << fixed;
	cout << endl << "Consumptions" << setfill(' ') << right << setw(35) << "Charges" << endl;

	for (int i = 0; i < 10; i++)
		cout << left << setw(40) << setfill('.') << arr[i] << right << "$ " << cost[i] << endl;
}

